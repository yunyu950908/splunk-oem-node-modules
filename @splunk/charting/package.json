{
    "name": "@splunk/charting",
    "version": "0.8.4",
    "description": "Splunk library for building interactive charts",
    "license": "SEE LICENSE IN LICENSE.md",
    "main": "lib/index.js",
    "files": [
        "lib"
    ],
    "publishConfig": {
        "registry": "https://repo.splunk.com/artifactory/api/npm/npm-solutions-local"
    },
    "scripts": {
        "build": "webpack",
        "build:watch": "yarn build -- --progress --watch",
        "start": "yarn build:watch",
        "lint": "eslint --ext .js,.jsx src/ test/",
        "lint:ci": "yarn lint -- -f junit -o test-reports/lint-results.xml",
        "test:integration": "karma start test/integration/karma.conf.js --single-run",
        "test:integration:ci": "IS_CI=true yarn test:integration -- --reporters mocha,junit --junitDirectory test-reports --junitFilename integration-results.xml --no-colors",
        "test:integration:just": "karma start test/integration/karma.conf.js --reporters mocha --filter",
        "test:integration:watch": "karma start test/integration/karma.conf.js",
        "test:integration:chrome": "karma start test/integration/karma.conf.js --browsers=Chrome"
    },
    "dependencies": {
        "@splunk/charting-utils": "^0.8.4",
        "@splunk/highcharts": "^0.8.4",
        "@splunk/highcharts-annotations": "^0.8.4",
        "@splunk/highcharts-test-hooks": "^0.8.4",
        "@splunk/highcharts-time-axis": "^0.8.4",
        "bowser": "^1.7.0",
        "jquery": "2.1.0",
        "lodash": "^4.17.4",
        "moment": "^2.18.1",
        "underscore": "1.6.0"
    },
    "devDependencies": {
        "@splunk/charting-webpack-config": "^0.8.4",
        "eslint": "^3.19.0",
        "karma": "^1.7.0",
        "webpack": "^3.4.1"
    }
}

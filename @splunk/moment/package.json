{
  "name": "@splunk/moment",
  "version": "0.3.0",
  "description": "A wrapper to moment and useful plugins.",
  "main": "index.js",
  "publishConfig": {
    "registry": "https://repo.splunk.com/artifactory/api/npm/npm-solutions-local"
  },
  "scripts": {
    "build": "NODE_ENV=production webpack --bail",
    "lint": "eslint src",
    "lint:ci": "yarn run lint -- -f junit -o test-reports/lint-results.xml",
    "start": "NODE_ENV=development webpack --watch",
    "test": "splunk-karma-unit-test-runner start karma.conf.js --single-run",
    "test:ci": "yarn run test -- --reporters mocha,junit --junitDirectory test-reports --junitFilename unit-results.xml --no-colors",
    "test:watch": "splunk-karma-unit-test-runner start karma.conf.js"
  },
  "repository": {
    "type": "git",
    "url": "https://git.splunk.com/scm/ui/splunk-ui.git"
  },
  "license": "UNLICENSED",
  "author": "Splunk",
  "dependencies": {
    "@splunk/splunk-utils": "^1.0.0",
    "@splunk/ui-utils": "^1.0.0",
    "lodash": "^4.17.4"
  },
  "devDependencies": {
    "@splunk/babel-preset": "^1.0.0",
    "@splunk/eslint-config": "^1.0.0",
    "@splunk/karma-unit-test-runner": "^1.0.0",
    "@splunk/webpack-configs": "^1.0.0",
    "babel-cli": "^6.22.2",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.1",
    "chai": "^3.5.0",
    "eslint": "^4.3.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-config-prettier": "^2.3.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.1.0",
    "moment": "^2.18.1",
    "moment-timezone": "^0.5.13",
    "webpack": "^3.2.0",
    "webpack-merge": "^4.1.0"
  },
  "engines": {
    "node": ">=6"
  }
}

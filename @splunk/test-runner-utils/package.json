{
  "name": "@splunk/test-runner-utils",
  "version": "0.3.0",
  "description": "Utilities for @splunk test runners",
  "publishConfig": {
    "registry": "https://repo.splunk.com/artifactory/api/npm/npm-solutions-local"
  },
  "license": "UNLICENSED",
  "author": "Splunk",
  "scripts": {
    "build": "babel src -d .",

{
  "name": "@splunk/ui-utils",
  "version": "1.1.0",
  "description": "A library of common UI utilities.",
  "scripts": {
    "build": "babel src -d . --ignore \"**/*.unit.js\"",
    "lint": "eslint src",
    "lint:ci": "yarn run lint -- -f junit -o test-reports/lint-results.xml",
    "start": "babel src -d . --watch --ignore \"**/*.unit.js\"",
    "test": "splunk-karma-unit-test-runner start karma.conf.js --single-run",
    "test:ci": "yarn run test -- --reporters mocha,junit --junitDirectory test-reports --junitFilename unit-results.xml --no-colors",
    "test:watch": "splunk-karma-unit-test-runner start karma.conf.js"
  },
  "license": "SEE LICENSE IN LICENSE.md",
  "author": "Splunk",
  "dependencies": {
    "keycode": "^2.1.9",
    "lodash": "^4.14.2"
  },
  "devDependencies": {
    "@splunk/babel-preset": "^1.2.0",
    "@splunk/eslint-config": "^1.2.0",
    "@splunk/karma-unit-test-runner": "^3.0.0",
    "@splunk/webpack-configs": "^2.0.0",
    "babel-cli": "^6.22.2",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.2",
    "babel-plugin-add-header-comment": "^1.0.3",
    "chai": "^3.5.0",
    "eslint": "^4.4.1",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-config-prettier": "^2.3.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.2.1"
  },
  "engines": {
    "node": ">=6"
  }
}

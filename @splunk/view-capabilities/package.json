{
  "name": "@splunk/view-capabilities",
  "version": "0.2.2",
  "license": "UNLICENSED",
  "author": "Splunk",
  "scripts": {
    "build": "NODE_ENV=production webpack --bail",
    "build:ci": "yarn build",
    "eslint": "eslint src --ext \".js,.jsx\"",
    "eslint:ci": "yarn run eslint -- -f junit -o test-reports/lint-results.xml",
    "eslint:fix": "eslint src --ext \".js, .jsx\" --fix",
    "link:app": "ln -s $PWD/demo/splunk-app $SPLUNK_HOME/etc/apps/view-capabilities-demo-app",
    "lint": "yarn run eslint && yarn run stylelint",
    "lint:ci": "yarn run eslint:ci && yarn run stylelint",
    "publish:ci": "cicd-publish-package",
    "start": "webpack --watch",
    "start:app": "webpack --watch --config demo/webpack.splunkapp.config.js",
    "stylelint": "stylelint \"src/**/*.css\" --config stylelint.config.js",
    "test": "splunk-karma-unit-test-runner start karma.conf.js --single-run",
    "test:ci": "yarn run test -- --reporters mocha,junit --junitDirectory test-reports --junitFilename unit-results.xml --no-colors",
    "test:watch": "splunk-karma-unit-test-runner start karma.conf.js",
    "test:splunktional:build": "webpack --config demo/splunktional.webpack.config.js --bail",
    "test:splunktional": "yarn run test:splunktional:build && splunk-wdio-functional-test-runner splunktional.local.conf.js",
    "test:splunktional:ci": "yarn run test:splunktional:build && SPLUNKTIONAL_ORCA_PYTHON=true splunk-wdio-functional-test-runner splunktional.ci.conf.js",
    "test:splunktional:cloud": "yarn run test:splunktional:build && splunk-wdio-functional-test-runner splunktional.cloud.conf.js"
  },
  "publishConfig": {
    "registry": "https://repo.splunk.com/artifactory/api/npm/npm-solutions-local"
  },
  "main": "lib/ViewCapabilities.js",
  "devDependencies": {
    "@splunk/babel-preset": "^1.1.0",
    "@splunk/cicd-tools": "^0.0.8",
    "@splunk/css-loader": "^1.0.1",
    "@splunk/eslint-config": "^1.0.0",
    "@splunk/karma-unit-test-runner": "^2.0.1",
    "@splunk/react-page": "^1.1.0",
    "@splunk/react-ui": "^1.3.3",
    "@splunk/splunk-utils": "^1.1.0",
    "@splunk/stylelint-config": "^1.3.0",
    "@splunk/wdio-functional-test-runner": "^6.0.1",
    "@splunk/webpack-configs": "^1.0.1",
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.0",
    "chai": "^3.5.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "eslint": "^4.4.1",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-config-prettier": "^2.3.0",
    "eslint-import-resolver-webpack": "^0.8.3",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.2.1",
    "html-webpack-plugin": "^2.29.0",
    "raf": "^3.4.0",
    "react-test-renderer": "^16.2.0",
    "sinon": "^2.3.4",
    "stylelint": "^8.0.0",
    "webpack": "^3.11.0",
    "webpack-dev-server": "^2.11.1",
    "webpack-merge": "^4.1.0",
    "whatwg-fetch": "^2.0.3"
  },
  "peerDependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "engines": {
    "node": ">=6"
  }
}
